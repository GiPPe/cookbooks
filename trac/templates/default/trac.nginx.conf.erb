upstream tracd {
	server 127.0.0.1:8000;
	server 127.0.0.1:8001;
	server 127.0.0.1:8002;
	server 127.0.0.1:8003;
}

server {
	listen 443;
	server_name dev.<%= node[:domain] %>;
	ssl on;
	ssl_certificate      /etc/ssl/nginx/dev.sponsorpay.com.crt;
	ssl_certificate_key  /etc/ssl/nginx/dev.sponsorpay.com.key;

	location / {
		fastcgi_pass tracd;
		include /etc/nginx/fastcgi.conf;
		fastcgi_param SCRIPT_NAME "";
		fastcgi_param HTTPS on;
	}
}

server {
	listen 80;
	server_name dev.<%= node[:domain] %>;

	location / {
		fastcgi_pass tracd;
		include /etc/nginx/fastcgi.conf;
		fastcgi_param SCRIPT_NAME "";
	}
}
