#!/bin/sh

thisdir="$(dirname $(readlink -f $0))"
tmpfile=/tmp/git-postrecieve-<%= @project_name.gsub(/[[:space:]]+/,'_') %>-$$.$RANDOM.txt
trap "rm -f $tmpfile" EXIT

while read line
do
  echo "$line" >> $tmpfile
done

cat $tmpfile | $thisdir/post-receive-email >/dev/null 2>&1 ## ignore sendmail warnings
cat $tmpfile | $thisdir/post-receive-trac-update
